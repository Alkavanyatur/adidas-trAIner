
<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="378dp"
        android:layout_height="239dp"
        android:layout_margin="28dp"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/icon_objective"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_objective_gain_strength" />


        <TextView
            android:id="@+id/title_objective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon_objective"
            android:layout_centerHorizontal="true"
            android:linksClickable="true"
            android:text="@string/objective_title_gain_strength"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text_objective"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:linksClickable="true"
            android:padding="26dp"
            android:text="@string/objective_text_gain_strength"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="14sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>